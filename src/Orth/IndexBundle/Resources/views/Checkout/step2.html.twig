{% extends "shopbase.html.twig" %}
    {% block js_top %}       
    {% endblock %}

{% block content %}
<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active"><a href="category.html">Kasse</a></li>
            </ul>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <div class="w100 clearfix">
                        <ul class="orderStep orderStepLook2">
                            <li><a href="#"> <i class="fa fa-envelope "></i> <span> Rechnungsadresse</span>
                            </a></li>
                            <li class="active"><a href="#"> <i class="fa fa fa-map-marker  "></i>
                                <span> Lieferadresse </span></a></li>
                            <li><a href="#"><i class="fa fa-truck "> </i><span>Versandart</span> </a></li>
                            <li><a href="#"><i class="fa fa-money  "> </i><span>Zahlungsart</span> </a></li>
                            <li><a href="#"><i class="fa fa-check-square "> </i><span>Bestellung</span></a>
                            </li>
                        </ul>
                        <!--/.orderStep end-->
                    </div>
                    <div class="w100 clearfix">
                        <div class="row userInfo">
                            <div class="col-lg-12">
                                <h2 class="block-title-2"> Lieferadresse </h2>

                                <p>Bitte wählen Sie die gewünschte Lieferadresse für diese Bestellung aus.</p>
                                <hr>
                            </div>
                            <form action="/account/checkout/step3" method="get" name="frmSurvey">
                            <div class="col-xs-12 col-sm-12">
                                <div class="deliveryAdress">
                                    <div class="panel-group" id="accordion">
                                        <div class="panel panel-default">
                                            <div class="panel-heading panel-heading-custom">
                                                <h4 class="panel-title"><a class="standardDeliveryAdress" data-toggle="collapse"
                                                                           data-parent="#accordion" href="#collapseOne">
                                                    <span class="numberCircuil">Option 1</span> <strong> Standardlieferanschrift</strong> </a></h4>
                                            </div>
                                            <div id="collapseOne" class="panel-collapse collapse in">
                                                <div class="panel-body">
                                                    <table>
                                                        <tr>
                                                            <td><label class="radio">
                                                                    <input type="radio" name="del" id="{{deliveryAddress.0.id}}"
                                                                           value="{{deliveryAddress.0.id}}" checked> </label><td>
                                                            <td>
                                                                <ul>
                                                                    <li><span class="address-name"> <strong>{{ deliveryAddress.0.companyName1 }} {{ deliveryAddress.0.companyName2 }} {{ deliveryAddress.0.companyName3 }}</strong></span></li>
                                                                    <li><span class="address-line1"> {{ deliveryAddress.0.street }} {{ deliveryAddress.0.street2 }}</span></li>
                                                                    <li><span class="address-line2"> {{ deliveryAddress.0.zipcode }}, {{ deliveryAddress.0.city }} </span></li>
                                                                </ul>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>                        
                                        <div class="panel panel-default">
                                            <div class="panel-heading panel-heading-custom">
                                                <h4 class="panel-title"><a data-toggle="collapse"
                                                                           data-parent="#accordion" href="#collapseTwo">
                                                    <span class="numberCircuil">Option 2</span><strong> Abweichende Lieferanschrift</strong>
                                                </a></h4>
                                            </div>
                                            <div id="collapseTwo" class="panel-collapse collapse">
                                                <div class="panel-body">
                                                    <label>Adresse suchen: </label><div id="filter-form"><input id="filter" value="" maxlength="90" size="90" class="form-control" type="text"></div>
                                                        <table class="table adressList">
                                                            <tr>
                                                                <th><i class="fa fa-check"></i></th>
                                                                <th>Titel</th>
                                                                <th>Firma</th>
                                                                <th>Straße</th>
                                                                <th>Plz/Ort</th>
                                                            </tr>  
                                                        {% for address in addresses %} 
                                                            <tr>
                                                                <td><label class="radio">
                                                                    <input type="radio" name="del" id="{{address.id}}"
                                                                           value="{{address.id}}"> </label></td>
                                                                <td>{{ address.addressTitle }}</td>
                                                                <td>{{ address.companyName1 }} {{ address.companyName2 }} {{ address.companyName3 }}</td>
                                                                <td>{{ address.street }} {{ address.street2 }}</td>
                                                                <td>{{ address.zipcode }}, {{ address.city }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                                
                    <div class="cartFooter w100">
                        <div class="box-footer">
                            <div class="pull-left"><a class="btn btn-default" href="{{ path('orth_shop_checkout', app.request.get('_route_params')|merge(app.request.query.all)) }}"> <i
                                    class="fa fa-arrow-left"></i> &nbsp; Zurück zur Rechnungsadresse </a></div>
                            <div class="pull-right"><button class="btn btn-primary btn-small " type="submit">
                                Lieferadresse &nbsp; <i class="fa fa-arrow-circle-right"></i> </button></div>
                        </div>
                    </div>
                    <!--/ cartFooter -->
                    <input hidden="hidden" name="inv" value="{{ app.request.get("inv") }}"/>
                    </form>
                </div>
            </div>
            <!--/row end-->
            </div>
        <div class="col-lg-3 col-md-3 col-sm-12 rightSidebar">
            <div class="w100 cartMiniTable">
                <table id="cart-summary" class="std table">
                    <tbody>
                    <tr>
                        <td>Positionen (netto)</td>
                        <td class="price"><span id="jTotal3">{{cartSum|number_format(2)}}</span></td>
                    </tr>
                    <tr style="">
                        <td>Fracht</td>
                        <td class="price"><span class="success">{{freight|number_format(2)}} €</span></td>
                    </tr>
                    <tr class="cart-total-price ">
                        <td>Gesamt (exkl. MwSt)</td>
                        <td class="price">{{(cartSum+freight)|number_format(2)}} €</td>
                    </tr>
                    <tr>
                        <td>MwSt. 19%</td>
                        <td class="price" id="total-tax">{{((cartSum+freight)/100*19)|number_format(2)}} €</td>
                    </tr>
                    <tr>
                        <td>Gesamt inkl. MwSt.</td>
                        <td class=" site-color" id="total-price">{{((cartSum+freight)*1.19)|number_format(2)}} €</td>
                    </tr>
                    </tbody>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!--  /cartMiniTable-->

        </div>
        <!--/rightSidebar-->

    </div>
    <!--/row-->

</div>
    <div style="clear:both"></div>
</div>
<!-- /main-container -->

<div class="gap"></div>
{% endblock %}
{% block js_special %}
<script src="/assets/js/uiTableFilter.js"></script>
{% endblock %}

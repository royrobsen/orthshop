{% extends "shopbase.html.twig" %}
    {% block js_top %}       
    {% endblock %}

{% block content %}
<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li><a href="category.html">Arbeitsschutz</a></li>
                <li><a href="sub-category.html">Atemschutz</a></li>
                <li class="active">Atemschutzmaske</li>
            </ul>
        </div>
    </div>
    <div class="row transitionfx">

        <!-- left column -->
        <div class="col-lg-6 col-md-6 col-sm-6 productImageZoom">

            <div>
                <img class="img-responsive" data-src="/images/product/nw/{{ images.0.picName }}"
                        src='/images/product/nw/{{ images.0.picName }}' alt='Daisy on the Ohoopee'/>
            </div>
            
        </div>
        <!--/ left column end -->

        <!-- right column -->
        <div class="col-lg-6 col-md-6 col-sm-5">
            <h1 class="product-title"> {{article.shortName}} </h1>

            <h3 class="product-code">Ref-Nr : {{article.articleNumber}}</h3>

            <div class="product-price"><span class="price-sales"> ab {{variants.0.price|number_format(2,',','.')}} €</span></div>
            <div class="details-description">
                <p>{{article.shortDescription}} </p>
            </div>
            <div class="cart-actions">
                <div class="addto">
                    <button onclick="productAddToCartForm.submit(this);" class="button btn-cart cart first"
                            title="In den Warenkorb legen" type="button">In den Korb
                    </button>
                    <a class="link-wishlist wishlist">Zur Wunschliste hinzufügen</a></div>
                <div style="clear:both"></div>
                <h3 class="incaps"><i class="fa fa fa-check-circle-o color-in"></i> Auf Lager</h3>

                <h3 style="display:none" class="incaps"><i class="fa fa-minus-circle color-out"></i> Nicht auf Lager</h3>

                <h3 class="incaps"><i class="glyphicon glyphicon-lock"></i> Sicheres Bestellen</h3>
            </div>
            <!--/.cart-actions-->
            <div class="zoomThumb pull-left">
                <a class="zoomThumbLink">
                    <img src="/images/product/nw/{{ images.0.picName }}" alt="Saleen" style='max-height: 100px;' title=""/></a>
            </div>

        </div>
        <!--/ right column end -->
        <div style="clear:both"></div>
        <div class="gap"></div>
        <div class="product-tab w100 clearfix">
                <ul class="nav nav-tabs">
                    {% if variants %}
                    <li class="active"><a href="#variants" data-toggle="tab">Varianten</a></li>
                    <li><a href="#details" data-toggle="tab">Details</a></li>
                    <li><a href="#shipping" data-toggle="tab">Versand</a></li>
                    {% else %}
                    <li><a class="active" href="#details" data-toggle="tab">Details</a></li>
                    <li><a href="#shipping" data-toggle="tab">Versand</a></li>
                    {% endif %}
                    {% if attachments %}
                    <li><a href="#downloads" data-toggle="tab">Downloads</a></li>
                    {% endif %}
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    {% if variants %}
                    <div class="tab-pane active" id="variants">
                        <form method="post" action="" name="addToCart">
                        <div class="table-responsive">
                            <table class="table" id="varTable">
                                <tr>
                                    <th>Art-Nr</th>
                                    {% for title in varTitle %}
                                    <th>{{title.attrName}}</th>
                                    {% endfor %}
                                    <th>Preis</th>
                                    <th>Menge</th>
                                    <th>VPE</th>
                                </tr>
                                {% for variant in variants %}
                                <tr>    
                                    <td>{{variant.supplierArticleNumber}} {% if variant.customArtnr is defined %} <br /> <small>{{variant.customArtnr}}</small> {% endif %}</td>
                                    {% for values in variant.variantvalues %}
                                    <td>{{values.attributeValue}} {{values.attributeUnit}}</td>
                                    {% endfor %}
                                    <td>{{variant.price|number_format(2,',','.')}} €</td>
                                    <td><input type="number" class="form-control" name="{{variant.id}}" id="{{variant.id}}" style="max-width: 75px;" min="0" step="{{variant.vpe}}"/></td>
                                    <td>{{variant.vpe}}</td>
                                </tr>    
                                {% endfor %}
                                </table>
                        </div>
                        <div class="cart-actions">
                            <div class="addto pull-right">
                                <button type="submit" class="button btn-cart cart first"
                                        title="In den Warenkorb legen" type="button">In den Korb
                                </button>
                            </div>
                        </div> 
                        <!--/.cart-actions-->
                        </form> 
                    </div>       
                   {% endif %}
                   {% if variants %}
                    <div class="tab-pane" id="details">
                   {% else %}
                    <div class="tab-pane active" id="details">
                   {% endif %}    
                        {{article.longDescription}}
                    </div>
                    <div class="tab-pane" id="shipping">
                        <table>
                            <colgroup>
                                <col style="width:33%">
                                <col style="width:33%">
                                <col style="width:33%">
                            </colgroup>
                            <tbody>
                            <tr>
                                <td>Standard</td>
                                <td>1-5 business days</td>
                                <td>$7.95</td>
                            </tr>
                            <tr>
                                <td>Two Day</td>
                                <td>2 business days</td>
                                <td>$15</td>
                            </tr>
                            <tr>
                                <td>Next Day</td>
                                <td>1 business day</td>
                                <td>$30</td>
                            </tr>
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="3">* Free on orders of $50 or more</td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    {% if attachments %}
                    <div class="tab-pane" id="downloads">
                        <table class="table">
                            <tr>
                                <th>Name</th>
                                <th>Link</th>
                            </tr>
                            {% for attachment in attachments %}
                            <tr>
                                <td>{{attachment.attachmentName}}</td>
                                <td><a href="{{attachment.path}}">Download</a></td>
                            </tr>
                            {% endfor %}
                        </table>
                    </div>   
                   {% endif %}   
                </div>
                <!-- /.tab content -->

            </div>
            <!--/.product-tab-->
        
    </div>
    <!--/.row-->


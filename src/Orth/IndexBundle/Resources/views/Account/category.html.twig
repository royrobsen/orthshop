{% extends "shopbase.html.twig" %}
{% block content %}

<div class="container main-container headerOffset">

    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="/account/my-account">Mein Konto</a></li>
                <li><a href="/account/config">Konfiguration</a></li>
                <li class="active"> Kategorie umbenennen </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">

            <h1 class="section-title-inner"><span><i class="fa fa-map-marker"></i> Kategorie umbenennen </span></h1>

            <div class="row userInfo">


                <div class="col-lg-12 col-xs-12">
                    <h2 class="block-title-2"> Sie können die Kategorie hier umbenennen. </h2>

                    <p class="required"><sup>*</sup> Pflichtfeld</p>
                </div>

                {{ form_start(form) }}
                {{ form_errors(form) }}	                    
                    <div class="col-xs-12 col-sm-6">
                        
                        <div class="form-group required">
                            <label for="InputCompany">Kategorienname <sup>*</sup></label>
                            {{ form_widget(form.categoryName, { 'attr': {'class': 'form-control', 'placeholder' : 'Name der Kategorie'} }) }}
                        </div>

                    </div>

                    <div class="col-lg-12 col-sm-6 clearfix">
                        {{form_widget(form.save, { 'attr': {'class':'btn btn-primary'}} ) }}
                    </div>

                {{ form_end(form) }}


                <div class="col-lg-12 col-xs-12  clearfix ">

                    <ul class="pager">
                        <li class="previous pull-right"><a href="/shop"> <i class="fa fa-home"></i> Zum Shop </a>
                        </li>
                        <li class="next pull-left"><a href="/account/my-account"> &larr; Zurück zu meinem Konto</a></li>
                    </ul>
                </div>


            </div>
            <!--/row end-->


        </div>
        <div class="col-lg-3 col-md-3 col-sm-5">
        </div>


    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /wrapper -->

<div class="gap"></div>
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Kategorie löschen</h4>
                      </div>
                      <div class="modal-body">
                          <h2>Achtung!</h2>
                        <p>Die Kategorie wird unwiderruflich gelöscht! Damit werden alle beinhalteten Artikel aus Ihrem Bestellsystem entfernt!</p>
                      </div>
                      <div ng-cloak class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
                        <a id="submitDelete" href="#"><button type="button" class="btn btn-danger">Löschen</button></a>
                      </div>
                    </div><!-- /.modal-content -->
                  </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
{% endblock %}
{% block js_special %}
<script src="/assets/js/uiTableFilter.js"></script>
<script type="text/javascript">
        $(document).ready(function() {
            $(".delete").click(function(e) {
                var catId = e.target.id;
                $("#submitDelete").attr('href', "/account/config/categories/delete-category/"+catId);
           });
        });
</script>
{% endblock %}
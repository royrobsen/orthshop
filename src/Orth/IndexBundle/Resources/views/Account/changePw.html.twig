{% extends "shopbase.html.twig" %}
{% block content %}

<div class="container main-container headerOffset">

    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="/account/my-account">Mein Konto</a></li>
                <li><a href="/account/personal-info">Persönliche Daten</a></li>
                <li class="active"> Passwort ändern </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner"><span><i
                    class="glyphicon glyphicon-user"></i> Passwort ändern </span></h1>

            <div class="row userInfo">
                <div class="col-lg-12">
                    <h2 class="block-title-2"> Sie können hier Ihr Passwort ändern!</h2>

                    <p class="required"><sup>*</sup> Pflichtfeld</p>
                    {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
                         {{ flashMessage }}
                    </div>
                    {% endfor %}
                </div>
                {{ form_start(form) }}
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData) }}</div>
                {% endif %} 
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group required">
                            <label for="InputName">Altes Passwort <sup>*</sup> </label>
                            {{ form_errors(form.oldPassword) }}
                            {{ form_widget(form.oldPassword, { 'attr': {'class': 'form-control', 'value' : '1234'} }) }}
                        </div>
                        <div class="form-group required">
                            <label for="InputName">Altes Passwort <sup>*</sup> </label>
                            {{ form_errors(form.newPassword.first) }}
                            {{ form_widget(form.newPassword.first, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group required">
                            <label for="InputName">Wiederholen <sup>*</sup> </label>
                            {{ form_errors(form.newPassword.second) }}
                            {{ form_widget(form.newPassword.second, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        {{form_widget(form.save, { 'attr': {'class':'btn btn-primary'}} ) }}
                    </div>
                {{ form_end(form) }}
                <div class="col-lg-12 clearfix">
                    <ul class="pager">
                        <li class="previous pull-right"><a href="/shop"> <i class="fa fa-home"></i> Zum Shop </a>
                        </li>
                        <li class="next pull-left"><a href="/account/my-account"> &larr; Zurück zu meinem Konto</a></li>
                    </ul>
                </div>
            </div>
            <!--/row end-->

        </div>
        <div class="col-lg-3 col-md-3 col-sm-5"></div>
    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /wrapper -->

<div class="gap"></div>

{% endblock %}
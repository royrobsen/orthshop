{% extends "shopbase.html.twig" %}
{% block content %}

<div class="container main-container headerOffset">

    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="/account/my-account">Mein Konto</a></li>
                <li><a href="/account/my-user">Meine Benutzer</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner"><span><i
                    class="glyphicon glyphicon-user"></i> Bestellsystem verwalten </span></h1>

            <div class="row userInfo">
               <form action="" method="post">
                <div class="col-lg-12">
                    <h2 class="block-title-2"> Sie können hier das Bestellsystem des Benutzers verändern und verschiedene Berechtigungen vergeben!</h2>
                    <h4>Haupt-Kategorien aus dem Bestellsystem</h4>
                </div>
                <table class="tree table table-striped">
                            {% for category in categories %}
                                {% set i = loop.index %}
                            <tr class="treegrid-{{loop.index}}">
                                    <td>
                                        <strong>{{ category.categoryName }}</strong>
                                    </td>
                                    <td style="white-space: nowrap; width: 1%;">
                                        <label for="checkboxes-0">
                                        {% if category.checkedCat == 0 %}
                                        <input name="{{category.id}}" id="checkboxes" value="1"
                                               type="checkbox">
                                        {% else %}
                                         <input name="{{category.id}}" style="display:none;" hidden="hidden" id="checkboxes" checked value="0"
                                               type="checkbox">   
                                        <input name="{{category.id}}" id="checkboxes" checked value="1"
                                               type="checkbox"> 
                                            
                                        {% endif %}    
                                        Sichtbar </label>                                  
                                    </td> 
                            </tr>
                            {% endfor %}    
                        </table>
                <div class="col-lg-12">
                    <button class="btn btn-danger">Speichern</button>
                </div>
                </form>                    
                <div class="col-lg-12 clearfix">
                                   
                    <ul class="pager">
                        <li class="previous pull-right"><a href="/shop"> <i class="fa fa-home"></i> Zum Shop </a>
                        </li>
                        <li class="next pull-left"><a href="/account/my-account"> &larr; Zurück zu meinem Konto</a></li>
                    </ul>
                </div>
            </div>
            <!--/row end-->

        </div>
                <div class="col-lg-3 col-md-3 col-sm-5">
                </div>
    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /wrapper -->

<div class="gap"></div>

{% endblock %}
{% block js_special %}
<script type="text/javascript" src="/assets/js/jquery.treegrid.min.js"></script>
<link rel="stylesheet" href="/assets/css/jquery.treegrid.css">

<script type="text/javascript">
  $('.tree').treegrid();
</script>
{% endblock %}